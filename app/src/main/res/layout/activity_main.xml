                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    tools:listitem="@layout/example_item"
                    android:id="@+id/rcyview">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </FrameLayout>

